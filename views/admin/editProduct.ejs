<!DOCTYPE html>
<html>

<head>
  <%- include('../includes/header.ejs') %>
</head>

<body>
  <%- include('../includes/productNav.ejs') %>
    <div class="jumbotron text-center">
      <div class="container">
        <main>
          <form class="product-form" action="/admin/<% if (editing) { %>edit-product<% } else { %>add-product<% } %>"
            method="POST">
            <div class="form-control">
              <label for="title">Title</label>
              <input type="text" name="title" id="title" required value="<% if (editing) { %><%= product.title %><% } %>">
            </div>
            <div class="form-control">
              <label for="description">Description</label>
              <textarea name="description" id="description"
                rows="5"><% if (editing) { %><%= product.description %><% } %></textarea>
            </div>
            <div class="form-control">
              <label for="rating">Rating</label>
              <input type="number" name="rating" id="rating" min="0" max="5"
                value="<% if (editing) { %><%= product.rating %><% } %>">
            </div>
            <div class="form-control">
              <label for="price">Price</label>
              <input type="number" name="price" id="price" step="0.01" required
                value="<% if (editing) { %><%= product.price %><% } %>">
            </div>
            <% if (editing) { %>
              <input type="hidden" value="<%= product._id %>" name="productID">
              <% } %>

                <button class="btn" type="submit">
                  <% if (editing) { %>Update Product<% } else { %>Add Product<% } %>
                </button>
          </form>
        </main>
      </div>
    </div>
    <%- include('../includes/footer.ejs') %>